
            <div id="layoutSidenav_content">
                <main>
                    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
                        <div class="container-xl px-4">
                            <div class="page-header-content">
                                <div class="row align-items-center justify-content-between pt-3">
                                    <div class="col-auto mb-3">
                                        <h1 class="page-header-title">
                                            <div class="page-header-icon"><i data-feather="book-open"></i></div>
                                            Informações da Lojas 
                                        </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </header>
                    <!-- Main page content-->
                    <div class="container-xl px-4 mt-4">
                        <!-- Account page navigation-->
                        
                        <hr class="mt-0 mb-4" />
                        <div class="row">
                            <div class="col-xl-4">
                                <!-- Profile picture card-->
                                <div class="card mb-4 mb-xl-0">
                                    <div class="card-header">Brasão da Loja</div>
                                    <div class="card-body text-center">
                                        <%= simple_form_for([:backoffice, @masonic_lodge]) do |f| %>
                                      <!-- Profile picture image-->
                                     
                                      <!-- Profile picture help block-->
                                      <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                                      <!-- Profile picture upload button-->
                                      <%= f.file_field :image_lodge, label: "Enviar imagem" %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-8">
                                <!-- Account details card-->
                                <div class="card mb-4">
                                    <div class="card-header">Informações Detalhada da Loja</div>
                                    <div class="card-body">
                                          <%= f.input :name, label: 'Nome' %>
                                            <p class="fs-6 fw-bold">Localização:</p>
                                            <hr class="mt-0 mb-4" />
                                            <div class="row gx-3 mb-3 p-2 mb-1">
                                              <div class="row gx-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                  <%= f.input :address, label: 'Endereço' %>
                                                </div>
                                                <div class="col-md-6">
                                                  <%= f.input :district, label: 'Bairro' %>
                                                </div>
                                            <div class="row gx-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                    <%= f.input :city, label: 'Cidade' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <%= f.input :state, label: 'Estado' %>
                                                </div>
                                            </div>
                                            </div>
                                            <br/>
                                            <div class="row gx-3 mb-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                    <%= f.input :country, as: :text, label: 'País' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <%= f.input :code_zip, label: 'CEP' %>
                                                </div>
                                            </div>
                                            <p class="fs-6 fw-bold">Maçônaria:</p>
                                             <hr class="mt-0 mb-4" />
                                            <div class="row gx-3 mb-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                    <%= f.input :cnpj, label: 'CNPJ' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <%= f.input :decree_creation_of_the_store, label: 'Decreto de Criação da loja' %>
                                                </div>
                                            </div>
                                            <div class="row gx-3 mb-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                    <%= f.input :founding_date, label: 'Data da Fundação' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <%= f.input :pontency, label: 'Potência'%>
                                                </div>
                                            </div>
                                            <div class="row gx-3 mb-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                    <%= f.input :meeting, label: 'Reuniões' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <%= f.input :rite, label: 'Rito' %>
                                                </div>
                                            </div>
                                            <div class="row gx-3 mb-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                    <%= f.input :store_number, label: 'Número da Loja' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <%= f.input :venerable, label: 'Venerável' %>
                                                </div>
                                            </div>
                                             <div class="row gx-3 mb-3 p-2 mb-1">
                                                <div class="col-md-6">
                                                    <%= f.input :email, label: 'Email' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <%= f.input :responsible, label: 'Responsavel pelo email' %>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <%= f.input :web_site, label: 'Site' %>
                                            </div>

                                        <div class="d-grid gap-2 col-2 mx-auto">
                                        <%= f.button :submit, class: 'btn btn-primary', value: "salva"%>
                                        </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer-admin mt-auto footer-light">
                    <div class="container-xl px-4">
                        <div class="row">
                            <div class="col-md-6 small">Copyright &copy; Your Website 2021</div>
                            <div class="col-md-6 text-md-end small">
                                <a href="#!">Privacy Policy</a>
                                &middot;
                                <a href="#!">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <%= javascript_include_tag 'scripts' %>

    </body>
</html>