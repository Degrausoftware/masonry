<main>
  <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-xl px-4">
      <div class="page-header-content">
        <div class="row align-items-center justify-content-between pt-3">
          <div class="col-auto mb-3">
            <h1 class="page-header-title">
              <div class="page-header-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg></div>
              Cadastro de Membro
            </h1>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Main page content-->
  <div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <nav class="nav nav-borders">
      <a class="nav-link active ms-0" href="account-profile.html">Meus dados</a>
      <a class="nav-link" href="account-billing.html">Billing</a>
      <a class="nav-link" href="account-security.html">Security</a>
      <a class="nav-link" href="account-notifications.html">Notifications</a>
    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
      <div class="col-xl-4">
        <!-- Profile picture card-->
        <div class="card mb-4 mb-xl-0">
          <div class="card-header">Profile Picture</div>
          <div class="card-body text-center">
            <!-- Profile picture image-->
            <img class="img-account-profile rounded-circle mb-2" src="../assets/img/illustrations/profiles/profile-1.png" alt="">
          </div>
        </div>
      </div>
      <div class="col-xl-8">
        <!-- Account details card-->
        <div class="card mb-4">
          <div class="card-header">Meus dados</div>
          <div class="card-body">
            <form>
              <!-- Form Row-->
            
                <div class="row gx-3 mb-3">
                  <!-- Form Group (first name)-->
                  <div class="md-3">
                    <label class="small mb-1 fw-bolder" for="inputFirstName">Nome Completo</label>
                    
                    <div class="bg-light border p-3 mb-3"><#= @member.name #></div>
                  </div>
                </div>
                <!-- Form Row        -->
                <div class="row gx-3 mb-3">
                  <!-- Form Group (organization name)-->
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputOrgName">Data de Nascimento</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.birth_date #></div>
                  </div>
                  <!-- Form Group (location)-->
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputLocation">CPF</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.cpf #></div>
                  </div>
                </div>
                <!-- Form Group (email address)-->
                <div class="mb-3">
                  <label class="small mb-1 fw-bolder" for="inputEmailAddress">Email</label>
                  <div class="bg-light border p-3 mb-3"><#= @member.email #></div>
                </div>
                <!-- Form Row-->
                <div class="row gx-3 mb-3">
                  <!-- Form Group (phone number)-->
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputPhone">Telefone</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.phone #></div>
                  </div>
                  <!-- Form Group (birthday)-->
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Celular</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.mobile_phone #></div>
                  </div>

                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Nome do Pai</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.fathers_name #></div>
                  </div>

                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Nome da MÃ£e</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.mothers_name #></div>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Local de nascimento</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.place_of_birth #></div>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Nacionalidade</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.nationality #></div>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Estado</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.state #></div>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Estado Civil</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.relationship #></div>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Tipo sanguinio</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.blood_type #></div>
                  </div>

                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Escolaridade</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.degree_of_instruction #></div>
                  </div>

                  <div class="col-md-6">
                    <label class="small mb-1 fw-bolder" for="inputBirthday">Data do casamento</label>
                    <div class="bg-light border p-3 mb-3"><#= @member.wedding_date #></div>
                  </div>

                </div>
             
              <!-- Save changes button-->
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>